{
  "name": "@authrim/ar-bridge",
  "version": "0.1.10",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "wrangler dev --config wrangler.dev.toml 2>/dev/null || wrangler dev",
    "deploy": "[ -n \"$DEPLOY_ENV\" ] && wrangler deploy --config wrangler.$DEPLOY_ENV.toml || wrangler deploy",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'external-idp: lint skipped'",
    "test": "npx vitest run",
    "test:unit": "npx vitest run",
    "test:property": "vitest run -c vitest.property.config.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@authrim/ar-lib-core": "workspace:*",
    "hono": "^4.11.7",
    "jose": "^6.1.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251121.0",
    "fast-check": "^4.5.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.0",
    "wrangler": "^4.59.3"
  }
}
