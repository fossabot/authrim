{
  "name": "@authrim/ar-auth",
  "version": "0.1.10",
  "type": "module",
  "private": true,
  "exports": {
    ".": "./src/index.ts",
    "./flow-engine": "./src/flow-engine/index.ts"
  },
  "scripts": {
    "dev": "wrangler dev --config wrangler.dev.toml 2>/dev/null || wrangler dev",
    "deploy": "[ -n \"$DEPLOY_ENV\" ] && wrangler deploy --config wrangler.$DEPLOY_ENV.toml || wrangler deploy",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'op-auth: lint skipped'",
    "test": "npx vitest run",
    "test:unit": "npx vitest run",
    "test:integration": "npx vitest run --config vitest.integration.config.ts",
    "test:passkey": "npx vitest run --config vitest.passkey.config.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@authrim/ar-lib-core": "workspace:*",
    "@authrim/ar-lib-plugin": "workspace:*",
    "@simplewebauthn/server": "^13.2.2",
    "hono": "^4.11.7",
    "jose": "^6.1.2",
    "resend": "^6.5.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251121.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.0",
    "wrangler": "^4.59.3"
  }
}
