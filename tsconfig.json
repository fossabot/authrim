{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@authrim/ar-lib-core": ["./packages/ar-lib-core/src/index.ts"],
      "@authrim/ar-lib-core/*": ["./packages/ar-lib-core/src/*"]
    }
  },
  "include": [
    "packages/ar-*/src/**/*",
    "test/setup.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".wrangler",
    "test/integration/**/*",
    "packages/*/src/**/__tests__/**",
    "packages/*/src/test/**"
  ]
}
